<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/paramValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textAlignment="center"
        android:textColor="@color/dark_yellow"
        android:textSize="@dimen/monitor_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/croller" />

    <com.sdsmdg.harjot.crollerTest.Croller
        android:id="@+id/croller"
        android:layout_width="@dimen/croller_tune_size"
        android:layout_height="@dimen/croller_tune_size"
        android:layout_centerInParent="true"
        app:back_circle_color="@color/black"
        app:indicator_color="@color/dark_yellow"
        app:indicator_width="15"
        app:is_continuous="false"
        app:label_color="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:main_circle_color="@color/black"
        app:max="315"
        app:min="0"
        app:progress_primary_circle_size="20"
        app:progress_primary_color="@color/dark_yellow"
        app:progress_primary_stroke_width="30"
        app:progress_secondary_color="@color/dark_yellow"
        app:start_offset="45" />


    <TextView
        android:id="@+id/paramDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_text"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginEnd="@dimen/main_margin"
        android:layout_marginBottom="@dimen/main_fragment_margin"
        android:textColor="@color/dark_yellow"
        android:textSize="@dimen/monitor_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/croller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_param_button_text"
        android:layout_marginTop="@dimen/main_fragment_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paramValue" />

</androidx.constraintlayout.widget.ConstraintLayout>

